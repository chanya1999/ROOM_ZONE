<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSubjectActivity">


    <LinearLayout
        android:id="@+id/m_s_head_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/m_s_subject_name_text_view"
            style="@style/TopicStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:textColor="@android:color/black"
            tools:text="99999 Subject Name" />

        <LinearLayout
            android:id="@+id/m_s_day_time_room_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/m_s_day_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_s_s_date_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:maxLines="1"
                    android:text="DAY:"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/m_s_day_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    tools:text="Mon." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_s_time_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_s_start_time_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    tools:text="08.30" />

                <TextView
                    android:id="@+id/m_s_s_-_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:text="-"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/m_s_end_time_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    tools:text="12.05" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_s_room_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_s_s_room_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:maxLines="1"
                    android:text="ROOM:"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/m_s_room_text_view"
                    style="@style/NormalTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="@android:color/black"
                    tools:text="1234 Sc.1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/m_s_number_of_student_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/m_s_s_number_of_student_text_view"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:text="NUMBER OF STUDENT:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/m_s_number_of_student_text_view"
                style="@style/NormalTextStyle"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:textColor="@android:color/black"
                tools:text="100" />

            <TextView
                android:id="@+id/m_s_s_credit_text_view"
                android:layout_weight="0"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:text="CREDIT:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/m_s_credit_text_view"
                style="@style/NormalTextStyle"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:textColor="@android:color/black"
                tools:text="3" />


        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/m_s_delete_button"
        app:layout_constraintEnd_toEndOf="@+id/m_s_close_button"
        app:layout_constraintStart_toStartOf="@+id/m_s_delete_button"
        app:layout_constraintTop_toBottomOf="@+id/m_s_head_view_layout"
        app:layout_constraintVertical_chainStyle="packed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/last_update_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/fc_iconic_regular"
                android:gravity="right|bottom"
                android:textColor="@color/colorDarkBackground"
                android:textSize="14sp"
                tools:text="LAST UPDATE: " />

            <TextView
                android:id="@+id/last_update_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/fc_iconic_regular"
                android:gravity="left|bottom"
                android:textColor="@color/colorDarkBackground"
                android:textSize="14sp"
                tools:text="14/02/2542 04:10" />

            <ImageButton
                android:id="@+id/m_s_edit_or_save_note_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@null"
                android:src="@drawable/ic_baseline_edit_24" />
        </LinearLayout>

            <EditText
                android:id="@+id/m_s_note_edit_text"
                style="@style/NormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="start|top"
                android:hint="NOTE: ........................................................................................................................................................................................................................................................................"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:maxLength="10000"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarThumbHorizontal="@drawable/bg_button_pressed"
                android:scrollbarThumbVertical="@drawable/bg_button_pressed"
                android:scrollbars="vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorDarkBackground" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/m_s_delete_button"
        style="@style/DarkButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="DELETE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/m_s_close_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/m_s_close_button"
        style="@style/DarkButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:text="CLOSE"
        app:layout_constraintBottom_toBottomOf="@+id/m_s_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m_s_delete_button"
        app:layout_constraintTop_toTopOf="@+id/m_s_delete_button" />



</androidx.constraintlayout.widget.ConstraintLayout>