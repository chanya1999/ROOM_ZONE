<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNormalBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/subject_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0.2dp"
        android:layout_marginLeft="0.2dp"
        android:layout_marginRight="0.2dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:id="@+id/card_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subject_name_text_view"
                style="@style/TopicStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="0dp"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@android:color/black"
                tools:text="99999 Subject Name" />

            <LinearLayout
                android:id="@+id/day_time_room_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="left"
                    android:layout_weight="1"
                    android:id="@+id/day_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/s_date_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="4dp"
                        android:maxLines="1"
                        android:text="DAY:"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/day_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        tools:text="Mon." />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_time_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        tools:text="08.30" />

                    <TextView
                        android:id="@+id/s_-_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:text="-"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/end_time_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        tools:text="12.05" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.65"
                    android:gravity="right"
                    android:id="@+id/room_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/s_room_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="4dp"
                        android:maxLines="1"
                        android:text="ROOM:"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/room_text_view"
                        style="@style/NormalTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        tools:text="1234 Sc.1" />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/number_of_student_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/s_number_of_student_text_view"
                style="@style/NormalTextStyle"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:text="NUM OF STUDENT:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/number_of_student_text_view"
                style="@style/NormalTextStyle"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:textColor="@android:color/black"
                tools:text="100" />

            <TextView
                android:id="@+id/s_credit_text_view"
                android:layout_weight="0"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:text="CREDIT:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/credit_text_view"
                style="@style/NormalTextStyle"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:textColor="@android:color/black"
                tools:text="3" />

        </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
